{
  "private": true,
  "scripts": {
    "build": "pnpm exec turbo run build",
    "dev": "pnpm exec turbo run dev",
    "lint": "pnpm exec turbo run lint",
    "clean": "pnpm exec turbo run clean && rm -rf node_modules",
    "format": "pnpm exec prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "pnpm exec changeset",
    "version-packages": "pnpm exec changeset version",
    "release": "pnpm exec turbo run build --filter=docs^... && pnpm exec changeset publish",
    "preview-storybook": "pnpm exec turbo run preview-storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "turbo": "^2.8.7"
  },
  "packageManager": "pnpm@8.15.6",
  "name": "design-system",
  "dependencies": {
    "@storybook/react": "^10.2.8",
    "@tanstack/react-table": "^8.21.3"
  }
}
